R"(
{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "MqttInterface",
  "description": "Mqtt information to correctly connect to an mqtt broker.",
  "properties": {
    "port": {
      "description": "Port number of mqtt broker.",
      "type": "integer",
      "maximum": 65535,
      "minimum": 0
    },
    "borker": {
      "description": "IP address of mqtt broker.",
      "type": "string",
      "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
    },
    "topic": {
      "description": "Topic to subscribe/publish to on the broker. Given pattern will be preceeded by 'cmnd/' or 'stat/' respectively when publishing or subscribing.",
      "type": "string"
    },
    "username": {
      "description": "Username for the mqtt connection.",
      "type": "string"
    },
    "password": {
      "description": "Password for the mqtt connection.",
      "type": "string"
    }
  },
  "required": [ "port", "broker", "topic" ],
  "type": "object",
  "additionalItems": false
}
)"